<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/colorBg</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Fullscreen" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Theme.AppCompat.Light.DarkActionBar" />

    <style name="AppTheme.Black.Translucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorBlackTranslucent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.Bottom.Slide</item>
    </style>

    <style name="Animation.Bottom.Slide" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/down_slide_in</item>
        <item name="android:activityOpenExitAnimation">@anim/down_slide_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/down_slide_in</item>
        <item name="android:activityCloseExitAnimation">@anim/down_slide_out</item>
    </style>

</resources>
